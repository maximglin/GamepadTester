<UserControl x:Class="GamepadTester.DPadButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GamepadTester"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox Stretch="Fill" Margin="3 0 0 0">
            <local:RoundedCornersPolygon Fill="LightGray" Stroke="Gray" StrokeThickness="2" ArcRoundness="5" UseRoundnessPercentage="False" IsClosed="True">
                <local:RoundedCornersPolygon.Points>
                    <Point X="20" Y="0"></Point>
                    <Point X="0" Y="0"></Point>
                    <Point X="0" Y="30"></Point>
                    <Point X="10" Y="50"></Point>
                    <Point X="20" Y="30"></Point>
                </local:RoundedCornersPolygon.Points>

            </local:RoundedCornersPolygon>
        </Viewbox>
        <TextBlock Text="▲" Margin="0 5 0 0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="25" Foreground="Gray"></TextBlock>


    </Grid>
</UserControl>
